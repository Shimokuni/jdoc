#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path("../../lib", __FILE__)
require "jdoc"
require "json"
require "yaml"

path = ARGV[0]

case File.extname(path)
when ".yml", ".yaml"
  schema = YAML.load_file(path)
else
  str = File.read(path)
  schema = JSON.parse(str)
end

puts Jdoc::Generator.call(schema)
